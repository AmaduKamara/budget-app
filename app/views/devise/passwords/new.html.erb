<header class="bg-sky-500 py-4 text-center w-96">
  <h2 class="text-xl text-white uppercase">Forgot your password?</h2>
</header>

<div  class="px-8 pt-20">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border py-2 w-full mb-3 px-3', placeholder: 'Enter your email' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions",  class: "bg-sky-500 py-3 w-full text-white rounded-md px-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
