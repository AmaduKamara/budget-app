<div class="flex flex-col items-center mb-10">
  <% @categories.each_with_index do |category, index| %>
    <%= link_to category_expenses_path(category.id), class: do %>
    <div class="flex bg-slate-50 rounded-md mx-6 shadow-lg p-4 mb-4m">
      <%= image_tag category.icon, alt: 'icon', class: "w-24" %>

      <div class="grow text-gray-500 font-medium">
        <p class="text-lg"><%= category.name %></p>
        <p class="mt-14 text-xs"><%= category.created_at.strftime('%d %h %Y') %></p>
      </div>

      <p class="grow-0 ml-8 font-semibold">$<%= @total_amount[index] %> </p>
    </div>
    <% end %>
  <% end %>

  <%= link_to 'Add new category', new_category_path, class: "bg-sky-500 p-3 uppercase rounded-md text-slate-50 mt-6" %>
