<header class="bg-sky-500 py-4 text-center w-96">
  <h2 class="text-xl text-white uppercase">Categories</h2>
</header>

<div class="mt-5">
  <%= render 'shared/notice' %>
</div>

<div class="mx-5 items-center mb-10 pt-20">
  <% @categories.each_with_index do |category, index| %>
    <%= link_to category_expenses_path(category.id), class: do %>
    <div class="flex justify-between bg-white rounded-md shadow-lg p-4 mb-6">
      <div>
        <%= image_tag category.icon, alt: 'icon', class: "w-24" %>
      </div>

      <div class="grow text-gray-500 font-medium w-32">
        <p class="text-lg"><%= category.name %></p>
        <p class="mt-14 text-xs"><%= category.created_at.strftime('%d %h %Y') %></p>
      </div>

      <p class="grow-0 font-semibold">$<%= @total_amount[index] %> </p>
    </div>
    <% end %>
  <% end %>

  <%= link_to 'Add new category', new_category_path, class: "bg-sky-500 p-3 uppercase rounded-md text-white text-center mt-12 block mb-6" %>
  <%= render 'shared/signin_signup' %>
</div>