<header class="bg-sky-500 py-4 text-center w-96">
  <h2 class="text-xl text-white uppercase">Add a new category</h2>
</header>

<div class="mt-5">
  <%= render 'shared/notice' %>
</div>

<div class="flex flex-col items-center pt-20">
  <%= form_with url: categories_path, scope: :category do |form| %>
    <div>
    <%= form.label :Name %><br>
    <%= form.text_field :name, class: 'mt-2 w-56 p-1 rounded', require: true, class: 'border py-3 w-full mb-3 px-3', placeholder: 'Enter first name' %>
    </div>

    <div class="mt-2">
    <%= form.label :icon_link %><br>
    <%= form.text_field :icon, class: 'mt-2 w-56 p-1 rounded', require: true, class: 'border py-3 w-full mb-3 px-3', placeholder: 'Enter first name' %>
    </div>

    <%= link_to 'Back', categories_path, class: "border border-sky-500 rounded text-sky-500 mt-2 px-16 mr-20 px-4 py-3" %>
    <%= form.submit "Submit", class: "border bg-sky-500 p-3 px-8 rounded-md text-slate-50 mt-2" %>
  <% end %>
</div>
